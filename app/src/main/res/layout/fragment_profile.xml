<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/root_view_act_secondary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/profile_appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/profile_collapse_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlwaysCollapsed"
            android:minHeight="?android:attr/actionBarSize"
            android:layout_gravity="bottom"
            app:expandedTitleMargin="15dp"
            app:expandedTitleGravity="bottom">

            <!--<FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax">-->

                <ImageView
                    android:id="@+id/blur_ImageView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/collapsing_imageview_height"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.75"
                    android:background="#000000"/>


                <!--<android.support.v7.widget.Toolbar
                    android:id="@+id/collapse_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="top"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.PopupOverlay"/>-->

                <FrameLayout
                    android:id="@+id/frame_profile_circle_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    app:layout_collapseMode="parallax">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_circle_imageView"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/bnv_profile"
                        app:civ_border_width="3dp"
                        app:civ_border_color="#5fceff"
                        android:scaleType="centerCrop"
                        app:layout_collapseMode="parallax"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/display_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    app:layout_collapseMode="parallax"
                    android:focusableInTouchMode="true"
                    app:layout_collapseParallaxMultiplier="0.60">

                    <ImageView
                        android:id="@+id/expand_more"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_keyboard_arrow_down_24dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="120dp"
                        android:layout_gravity="center_horizontal">
                        <TextView
                            android:id="@+id/textView_Username"
                            android:text=""
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/textView_Title"
                            android:text=""
                            android:layout_gravity="center"
                            android:textSize="12sp"
                            android:maxLines="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_margin="10dp">
                            <TextView
                                android:id="@+id/textView_Location"
                                android:text=""
                                android:textSize="12sp"
                                android:layout_width="0dp"
                                android:layout_gravity="left"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"/>
                            <TextView
                                android:id="@+id/textView_Dob"
                                android:text=""
                                android:textSize="12sp"
                                android:layout_width="0dp"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <Button
                        android:id="@+id/trot_button"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:background="@drawable/bg_profile_action_opaque"
                        android:drawableLeft="@drawable/watt_steps_white"
                        android:paddingLeft="10dp"
                        android:visibility="gone"
                        android:text="Trot"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:backgroundTint="@color/profile_button_bg_tint"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="220dp"
                        />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/profile_recycler_action"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom">
                    </android.support.v7.widget.RecyclerView>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/edit_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    app:layout_collapseMode="parallax">
                    <ImageView
                        android:id="@+id/close_more"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_close_white_24dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:tint="#5fceff"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="100dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name:"
                            android:textSize="10sp"
                            android:layout_gravity="left"
                            android:layout_marginBottom="@dimen/margin_bottom_textView_edit_profile"/>
                        <EditText
                            android:id="@+id/editText_userName"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:hint="Enter your name"
                            android:textColorHint="@color/profile_button_hint_color"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:background="@drawable/bg_profile_action_opaque"
                            android:backgroundTint="@color/profile_button_bg_tint"
                            android:layout_marginBottom="@dimen/margin_bottom_editText_edit_profile"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title:"
                            android:textSize="10sp"
                            android:layout_gravity="left"
                            android:layout_marginBottom="@dimen/margin_bottom_textView_edit_profile"/>
                        <EditText
                            android:id="@+id/editText_title"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:hint="Short description?"
                            android:textColorHint="@color/profile_button_hint_color"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:background="@drawable/bg_profile_action_opaque"
                            android:backgroundTint="@color/profile_button_bg_tint"
                            android:layout_marginBottom="@dimen/margin_bottom_editText_edit_profile"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginRight="5dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Location:"
                                    android:textSize="10sp"
                                    android:layout_gravity="left"
                                    android:layout_marginBottom="@dimen/margin_bottom_textView_edit_profile"/>
                                <EditText
                                    android:id="@+id/editText_location"
                                    android:layout_width="125dp"
                                    android:layout_height="35dp"
                                    android:hint="Enter your Location"
                                    android:textColorHint="@color/profile_button_hint_color"
                                    android:gravity="center"
                                    android:textSize="10sp"
                                    android:background="@drawable/bg_profile_action_opaque"
                                    android:backgroundTint="@color/profile_button_bg_tint"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="5dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DOB(dd/mm/yyyy):"
                                    android:textSize="10sp"
                                    android:layout_gravity="left"
                                    android:layout_marginBottom="@dimen/margin_bottom_textView_edit_profile"/>
                                <EditText
                                    android:id="@+id/editText_dob"
                                    android:layout_width="125dp"
                                    android:layout_height="35dp"
                                    android:hint="Your Birthday"
                                    android:textColorHint="@color/profile_button_hint_color"
                                    android:gravity="center"
                                    android:textSize="10sp"
                                    android:background="@drawable/bg_profile_action_opaque"
                                    android:backgroundTint="@color/profile_button_bg_tint"/>
                            </LinearLayout>
                        </LinearLayout>
                        <Button
                            android:id="@+id/save_profile"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:text="Save"
                            android:textSize="12sp"
                            android:background="@drawable/bg_profile_action_opaque"
                            android:backgroundTint="@color/profile_button_bg_tint"
                            android:layout_marginTop="20dp"/>
                    </LinearLayout>
                </FrameLayout>
            <!--</FrameLayout>-->
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_secondary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fadeScrollbars="true"
        android:isScrollContainer="true"
        android:paddingTop="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </android.support.v7.widget.RecyclerView>
</android.support.design.widget.CoordinatorLayout>
