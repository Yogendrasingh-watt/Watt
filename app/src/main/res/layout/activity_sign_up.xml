<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_screen"
    tools:context="com.viwid.watt.watt.SignUpActivity">

    <ImageView
        android:id="@+id/close_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="527dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="344dp"
        android:layout_marginLeft="344dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_close_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="CREATE NEW
ACCOUNT"
        android:textColor="#ffffff"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_add_circle_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/signup_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/firstname"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_top_left_round"
        android:hint="First Name"
        android:paddingLeft="15dp"
        android:textColor="#979899"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toStartOf="@id/email" />
    <View
        android:layout_width="2dp"
        android:layout_height="45dp"
        android:background="#80d8d8d8"
        app:layout_constraintLeft_toRightOf="@id/firstname"
        app:layout_constraintRight_toLeftOf="@id/lastname"
        app:layout_constraintTop_toTopOf="@id/firstname"
        />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/bg_top_right_round"
        android:hint="Last Name"
        android:paddingLeft="15dp"
        android:textColor="#979899"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintRight_toRightOf="@id/email"/>

    <View
        android:layout_width="260dp"
        android:layout_height="1dp"
        android:background="#80d8d8d8"
        app:layout_constraintBottom_toTopOf="@id/email"
        app:layout_constraintLeft_toLeftOf="@id/firstname"
        />
    <EditText
        android:id="@+id/email"
        android:hint="Email Address"
        android:textSize="12sp"
        android:drawableLeft="@drawable/email_icon"
        android:paddingLeft="15dp"
        android:drawablePadding="8dp"
        android:inputType="textEmailAddress"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/bg_edittext_sign_up_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstname" />
    <View
        android:layout_width="260dp"
        android:layout_height="1dp"
        android:background="#80d8d8d8"
        app:layout_constraintBottom_toTopOf="@id/password"
        app:layout_constraintLeft_toLeftOf="@id/firstname"
        />

    <EditText
        android:id="@+id/password"
        android:hint="Password"
        android:textSize="12sp"
        android:drawableLeft="@drawable/password_icon"
        android:paddingLeft="15dp"
        android:drawablePadding="8dp"
        android:inputType="textPassword"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginRight="62dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/bg_edittext_sign_up_screen"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@id/email"
        app:layout_constraintTop_toBottomOf="@id/email"
        tools:layout_editor_absoluteY="303dp" />
    <View
        android:layout_width="260dp"
        android:layout_height="1dp"
        android:background="#80d8d8d8"
        app:layout_constraintBottom_toTopOf="@id/mobile_number"
        app:layout_constraintLeft_toLeftOf="@id/firstname"
        />

    <EditText
        android:id="@+id/mobile_number"
        android:hint="Mobile Number"
        android:textSize="12sp"
        android:drawableLeft="@drawable/mobile_number_icon"
        android:paddingLeft="15dp"
        android:drawablePadding="8dp"
        android:inputType="numberDecimal"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginRight="62dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/bg_edittext_sign_up_screen"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@id/password"
        app:layout_constraintTop_toBottomOf="@id/password"
        tools:layout_editor_absoluteY="343dp" />
    <View
        android:layout_width="260dp"
        android:layout_height="1dp"
        android:background="#80d8d8d8"
        app:layout_constraintBottom_toTopOf="@id/male_button"
        app:layout_constraintLeft_toLeftOf="@id/firstname"
        />

    <TextView
        android:id="@+id/male_button"
        android:text="Male"
        android:clickable="true"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:drawableLeft="@drawable/male_icon"
        android:paddingLeft="15dp"
        android:drawablePadding="8dp"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textColor="#979899"
        android:background="@drawable/bg_bottom_left_round"
        app:layout_constraintTop_toBottomOf="@id/mobile_number"
        app:layout_constraintLeft_toLeftOf="@id/mobile_number"
        tools:layout_editor_absoluteY="383dp" />

    <View
        android:layout_width="2dp"
        android:layout_height="45dp"
        android:background="#80d8d8d8"
        app:layout_constraintLeft_toRightOf="@id/male_button"
        app:layout_constraintRight_toLeftOf="@id/female_button"
        app:layout_constraintTop_toBottomOf="@id/mobile_number"
        />
    <TextView
        android:id="@+id/female_button"
        android:text="Female"
        android:clickable="true"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:drawableLeft="@drawable/female_icon"
        android:paddingLeft="15dp"
        android:drawablePadding="8dp"
        android:textColor="#979899"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/bg_bottom_right_round"
        app:layout_constraintRight_toRightOf="@id/mobile_number"
        app:layout_constraintTop_toBottomOf="@id/mobile_number"
        tools:layout_editor_absoluteY="383dp" />

    <Button
        android:id="@+id/signup_button"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_signup_button"
        android:gravity="center"
        android:text="SIGN UP"
        android:textColor="#67d2ff"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/male_button"
        tools:layout_editor_absoluteY="445dp" />
</android.support.constraint.ConstraintLayout>
